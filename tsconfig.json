{
  "compileOnSave"  : false,
  "compilerOptions": {
    "allowSyntheticDefaultImports"    : true,
    "baseUrl"                         : "./",
    "declaration"                     : true,
    "emitDecoratorMetadata"           : true,
    "esModuleInterop"                 : true,
    "experimentalDecorators"          : true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers"                   : true,
    "inlineSources"                   : true,
    "lib"                             : [
      "dom",
      "es2019"
    ],
    "module"                          : "es2015",
    "moduleResolution"                : "node",
    "noImplicitAny"                   : false,
    "noUnusedLocals"                  : false,
    "rootDir"                         : "./lib",
    "outDir"                          : "./dist/commonjs",
    "sourceMap"                       : true,
    "strict"                          : true,
    "strictNullChecks"                : false,
    "target"                          : "ES2020",
    "typeRoots"                       : [
      "node_modules/@types"
    ],
    "types"                           : [
      "node", "jest"
    ],
    "paths": {
        "@al/core":   [ "lib/nucleus/src/index.ts" ],
        "@al/core/*": [ "lib/*/src/index.ts" ]
    }
  },
  "include" : [
    "index.ts",
    "./lib/**/*.ts"
  ],
  "exclude" : [
    "node_modules",
    "**/*.spec.ts",
    "./tests/**"
  ]
}
